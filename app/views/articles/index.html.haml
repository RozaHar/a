.container
	.row
		.col-md-10.mx-auto
			=link_to "New article",new_article_path,class:"nav-link btn btn-primary"
			-@articles.each do |article|
				%hr
				%h1=link_to article.hidline,article_path(article),class:"nav-link"
				%p=article.content
				%p=article.created_at
				=link_to "Edit",edit_article_path(article),class:"nav-link btn btn-success"
				%br
				=link_to "Show",article_path(article),class:"nav-link btn btn-light"
				%hr